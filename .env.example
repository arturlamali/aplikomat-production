# =============================================================================
# APLIKOMAT - Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!
# =============================================================================

# -----------------------------------------------------------------------------
# Node Environment
# -----------------------------------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------------------------------
# Database - Supabase (REQUIRED for production)
# -----------------------------------------------------------------------------
DATABASE_URL_SUPABASE=postgresql://user:password@host:port/database
DIRECT_URL_SUPABASE=postgresql://user:password@host:port/database
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# -----------------------------------------------------------------------------
# Database - SQLite (Optional - for local development)
# -----------------------------------------------------------------------------
# DATABASE_URL_SQLITE=file:./drizzle-local/sqlite.db
# DATABASE_AUTH_TOKEN_SQLITE=your_auth_token_here

# -----------------------------------------------------------------------------
# Supabase Client (REQUIRED)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# -----------------------------------------------------------------------------
# RapidAPI - Job Search (REQUIRED for job scraping)
# -----------------------------------------------------------------------------
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=linkedin-data-api.p.rapidapi.com

# -----------------------------------------------------------------------------
# LinkedIn API (REQUIRED for LinkedIn profile scraping)
# -----------------------------------------------------------------------------
LINKEDIN_API_URL=https://your-linkedin-api-endpoint.com

# -----------------------------------------------------------------------------
# AI API Keys (at least one REQUIRED for CV generation)
# -----------------------------------------------------------------------------
# Google Gemini API
GOOGLE_GENERATIVE_AI_API_KEY=your_google_gemini_api_key_here

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API (REQUIRED for AI-powered universal job scraping)
# Recommended: GPT-5-nano for cost-effective scraping (~$0.0006/job)
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter API (alternative AI provider)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# -----------------------------------------------------------------------------
# PostHog Analytics (Optional)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# -----------------------------------------------------------------------------
# Maintenance Mode (Optional)
# -----------------------------------------------------------------------------
MAINTENANCE_MODE=false
IS_IN_MAINTENANCE_MODE=false

# -----------------------------------------------------------------------------
# Development Options
# -----------------------------------------------------------------------------
# Skip environment validation during build (NOT recommended for production)
# SKIP_ENV_VALIDATION=false
